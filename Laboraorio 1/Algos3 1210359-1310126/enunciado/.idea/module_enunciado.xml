<?xml version="1.0" encoding="UTF-8"?>
<project name="module_enunciado" default="compile.module.enunciado">
  <dirname property="module.enunciado.basedir" file="${ant.file.module_enunciado}"/>
  
  <property name="module.jdk.home.enunciado" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.enunciado" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.enunciado" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.enunciado" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="enunciado.output.dir" value="undefined"/>
  <property name="enunciado.testoutput.dir" value="undefined"/>
  
  <path id="enunciado.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="enunciado.module.production.classpath">
    <path refid="${module.jdk.classpath.enunciado}"/>
  </path>
  
  <path id="enunciado.runtime.production.module.classpath"/>
  
  <path id="enunciado.module.classpath">
    <path refid="${module.jdk.classpath.enunciado}"/>
  </path>
  
  <path id="enunciado.runtime.module.classpath"/>
  
  
  <patternset id="excluded.from.module.enunciado">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.enunciado">
    <patternset refid="excluded.from.module.enunciado"/>
  </patternset>
  
  
  <target name="compile.module.enunciado" depends="compile.module.enunciado.production,compile.module.enunciado.tests" description="Compile module enunciado"/>
  
  <target name="compile.module.enunciado.production" depends="register.custom.compilers" description="Compile module enunciado; production classes"/>
  
  <target name="compile.module.enunciado.tests" depends="register.custom.compilers,compile.module.enunciado.production" description="compile module enunciado; test classes" unless="skip.tests"/>
  
  <target name="clean.module.enunciado" description="cleanup module">
    <delete dir="${enunciado.output.dir}"/>
    <delete dir="${enunciado.testoutput.dir}"/>
  </target>
</project>